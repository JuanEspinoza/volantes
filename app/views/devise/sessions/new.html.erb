 <div style="height: 500px;width: 1024px">
    <table align="center">
          <tr>
                <td>
                    <h2>Sign in</h2>
                    <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
                    <div class="form-inputs">

                        <%= devise_error_messages! %>

                        <%= f.text_field :email,required:true,autofocus: true, placeholder:"Email",class:"span2" %>
                        <%= f.password_field :password,required:true, placeholder:"Password", class:"span2" %>

                    </div>

                    <div class="">
                        <%= f.button :submit, "Sign in", class: "btn"%>
                    </div>
                        <div>

                        <% if devise_mapping.rememberable? -%>
                            <%= f.check_box :remember_me, {:checked => "checked"}, :style => 'vertical-align: middle; display: inline-block;'%>
                            <%= f.label :remember_me, 'Remember Me', :style => 'vertical-align: middle; display: inline-block;' %>
                        <% end -%>
                        </div>
                <% end %>

                    <%= render "devise/shared/links" %>

                </td>

          </tr>


     </table>

 </div>