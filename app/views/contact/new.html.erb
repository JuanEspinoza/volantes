<%= simple_form_for @message, :url => contact_path, class:"navbar-form pull-right" do |form| %>




            <%= form.text_field :name, required:true,autofocus:true,placeholder:"nombre" %>


            <%= form.text_field :email,required:true,autofocus:true, placeholder:"email" %>

            <%= form.text_field :subject,required:true,autofocus:true, placeholder:"Asunto" %>


            <%= form.text_field :body,required:true,autofocus:true, placeholder:"Escribir!!!"%>


            <%= form.button :submit, "Enviar", class: "btn"%>


<% end %>