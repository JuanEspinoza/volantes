<h1>Listing flyers</h1>

<table>
  <tr>
    <th>Name</th>
    <th>File url</th>
    <th>Active</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @flyers.each do |flyer| %>
  <tr>
    <td><%= flyer.name %></td>
    <td><%= flyer.file_url %></td>
    <td><%= flyer.active %></td>
    <td><%= link_to 'Show', flyer %></td>
    <td><%= link_to 'Edit', edit_flyer_path(flyer) %></td>
    <td><%= link_to 'Destroy', flyer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

